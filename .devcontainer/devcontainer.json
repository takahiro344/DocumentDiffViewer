{
    "name": "document-diff-viewer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/workspaces/DocumentDiffViewer",
    "forwardPorts": [
        8000,
        5678
    ],
    "overrideCommand": true,
    "mounts": [
        "source=${localWorkspaceFolder}/data,target=/app/data,type=bind"
    ],
    "postCreateCommand": "python3 -Xfrozen_modules=off -m uvicorn backend.main:app --host 0.0.0.0 --port 8000 --reload --workers=1",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "ms-python.flake8"
            ],
            "settings": {
                "[python]": {
                    "editor.defaultFormatter": "ms-python.python",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.fixAll": "explicit"
                    }
                },
                "python.sortImports.args": [
                    "--profile",
                    "black"
                ]
            }
        }
    }
}